<!-- views/listings/receipt.ejs -->
<%- include('../includes/header') %>

<div class="container my-5">
  <div class="card shadow-lg rounded-4">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0"><i class="bi bi-receipt-cutoff me-2"></i>Booking Receipt</h4>
      <a href="/listings/<%= listing._id %>" class="btn btn-light">
        <i class="bi bi-arrow-left-circle me-1"></i>Back to Listing
      </a>
    </div>
    <div class="card-body">
      <h5 class="card-title mb-3 text-primary"><i class="bi bi-house-door-fill me-2"></i><%= listing.title %></h5>

      <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item">
          <strong><i class="bi bi-calendar-day me-2"></i>Days:</strong> <%= bookingReceipt.days %>
        </li>
        <li class="list-group-item">
          <strong><i class="bi bi-stars me-2"></i>Facilities:</strong> <%= bookingReceipt.facilities.join(", ") %>
        </li>
        <li class="list-group-item">
          <strong><i class="bi bi-currency-rupee me-2"></i>Base Price per Day:</strong> ‚Çπ<%= bookingReceipt.basePrice %>
        </li>
        <li class="list-group-item">
          <strong><i class="bi bi-cash-coin me-2"></i>Total Price:</strong> ‚Çπ<%= bookingReceipt.total %>
        </li>
      </ul>
    </div>
    <div class="card-footer text-center text-muted">
      Thank you for booking with <strong>WanderLust</strong>! üåç
    </div>
  </div>
</div>

<%- include('../includes/footer') %>
